{
	"$schema": "http://json.schemastore.org/prettierrc",
	"overrides": [
		{ "files": ".*rc", "options": { "parser": "json" } },
		{ "files": ".nvmrc", "options": { "parser": "yaml" } }
	],
	"trailingComma": "es5",
	"semi": true,
	"tabWidth": 2,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"useTabs": true,
	"plugins": ["prettier-plugin-tailwindcss"]
}
